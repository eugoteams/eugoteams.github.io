                {
                    "description": "Undo last action",
                    "keys": ["U"]
                },
                {
                    "description": "Manually sync",
                    "keys": ["F5"]
                },
                {
                    "description": "Navigate to default page",
                    "keys": ["Home"]
                },
                {
                    "description": "Navigate back in 1-pane/2-pane view",
                    "keys": ["PgUp"]
                },
                {
                    "description": "Navigate forward in 1-pane/2-pane view",
                    "keys": ["PgDown"]
                }
            ]
        },
        {
            "name": "Adding or editing tasks",
            "shortcuts": [
                {
                    "description": "Cancel current changes",
                    "keys": ["Esc"]
                },
                {
                    "description": "Save a newly created task and create a new one below it",
                    "keys": ["Enter"]
                },
                {
                    "description": "Save changes to an existing task and create a new task below it",
                    "keys": ["Shift", "Enter"]
                },
                {
                    "description": "Save a new task or save changes to an existing one and create a new task above it",
                    "keys": ["Ctrl", "Enter"]
                },
                {
                    "description": "Move to the  task above the task currently being edited",
                    "keys": ["Ctrl", "Up"]
                },
                {
                    "description": "Move to the task below the task currently being edited",
                    "keys": ["Ctrl", "Down"]
                }
            ]
        },
        {
            "name": "Creating and completing sub-tasks",
            "shortcuts": [
                {
                    "description": "Increase task indent",
