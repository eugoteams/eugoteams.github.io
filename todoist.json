                {
                    "description": "Decrease task indent",
                    "keys": ["Ctrl", "Alt", "Left"]
                },
                {
                    "description": "Complete a sub-task or recurring task and archive it",
                    "keys": ["Shift", "(click)"]
                }
            ]
        },
        {
