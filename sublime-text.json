    "sections": [
        {
            "name": "Editing",
            "shortcuts": [
                {
                    "description": "Cut line",
                    "keys": ["Ctrl", "X"]
                },
                {
                    "description": "Insert line after",
                    "keys": ["Ctrl", "Enter"]
                },
                {
                    "description": "Insert line before",
                    "keys": ["Ctrl", "Shift", "Enter"]
                },
                {
                    "description": "Move line/selection up",
                    "keys": ["Ctrl", "Shift", "Up"]
                },
                {
                    "description": "Move line/selection down",
                    "keys": ["Ctrl", "Shift", "Down"]
                },
                {
                    "description": "Select line - Repeat to select next lines",
                    "keys": ["Ctrl", "L"]
                },
                {
                    "description": "Select word - Repeat selects other occurrences",
                    "keys": ["Ctrl", "D"]
                },
                {
                    "description": "Jump to closing parentheses - Repeat to jump to opening parentheses",
                    "keys": ["Ctrl", "M"]
                },
                {
                    "description": "Select all contents of the current parentheses",
                    "keys": ["Ctrl", "Shift", "M"]
                },
                {
                    "description": "Delete line",
                    "keys": ["Ctrl", "Shift", "K"]
                },
                {
                    "description": "Delete from cursor to end of line",
                    "keys": ["Ctrl", "K, K"]
                },
                {
                    "description": "Delete from cursor to start of line",
                    "keys": ["Ctrl", "K", "Backspace"]
                },
                {
