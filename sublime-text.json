                    "keys": ["Ctrl", "]"]
                },
                {
                    "description": "Un-indent current line(s)",
                    "keys": ["Ctrl", "["]
                },
                {
                    "description": "Duplicate line(s)",
                    "keys": ["Ctrl", "Shift", "D"]
                },
                {
                    "description": "Join line below to the end of the current line",
                    "keys": ["Ctrl", "J"]
                },
                {
                    "description": "Comment/un-comment current line",
                    "keys": ["Ctrl", "/"]
                },
                {
                    "description": "Block comment current selection",
                    "keys": ["Ctrl", "Shift", "/"]
                },
                {
                    "description": "Redo, or repeat last keyboard shortcut command",
                    "keys": ["Ctrl", "Y"]
                },
                {
                    "description": "Paste and indent correctly",
                    "keys": ["Ctrl", "Shift", "V"]
                },
                {
                    "description": "Select next auto-complete suggestion",
                    "keys": ["Ctrl", "Space"]
                },
                {
                    "description": "Soft undo; jumps to your last change before undoing, change when repeated",
                    "keys": ["Ctrl", "U"]
                },
                {
                    "description": "Wrap selection in HTML tag",
                    "keys": ["Alt", "Shift", "W"]
                },
                {
                    "description": "Close current HTML tag",
                    "keys": ["Alt", "."]
                },
                {
                    "description": "Hard wrap line to ruler column setting",
                    "keys": ["Alt", "Q"]
                }
            ]
        },
        {
            "name": "Navigation",
            "shortcuts": [
                {
                    "description": "Quick-open files by name",
                    "keys": ["Ctrl", "P"]
                },
                {
                    "description": "Goto symbol",
                    "keys": ["Ctrl", "R"]
                },
                {
                    "description": "Goto word in current file",
                    "keys": ["Ctrl", ";"]
                },
                {
                    "description": "Goto line in current file",
                    "keys": ["Ctrl", "G"]
                }
            ]
        },
        {
            "name": "General",
            "shortcuts": [
                {
                    "description": "Command prompt",
                    "keys": ["Ctrl", "Shift", "P"]
                },
                {
                    "description": "Toggle sidebar",
                    "keys": ["Ctrl", "K, B"]
                },
                {
                    "description": "Show scope in status bar",
                    "keys": ["Ctrl", "Shift", "Alt", "P"]
                }
            ]
        },
        {
            "name": "Find/Replace",
            "shortcuts": [
                {
                    "description": "Find",
                    "keys": ["Ctrl", "F"]
                },
                {
                    "description": "Replace",
                    "keys": ["Ctrl", "H"]
                },
                {
                    "description": "Find in files",
                    "keys": ["Ctrl", "Shift", "F"]
                }
            ]
        },
        {
            "name": "Split window",
            "shortcuts": [
                {
                    "description": "Revert view to single column",
                    "keys": ["Alt", "Shift", "1"]
