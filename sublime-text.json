            "shortcuts": [
                {
                    "description": "Toggle bookmark",
                    "keys": ["Ctrl", "F2"]
                },
                {
                    "description": "Next bookmark",
                    "keys": ["F2"]
                },
                {
                    "description": "Previous bookmark",
                    "keys": ["Shift", "F2"]
                },
                {
                    "description": "Clear bookmarks",
                    "keys": ["Ctrl", "Shift", "F2"]
                }
            ]
        },
        {
            "name": "Text manipulation",
            "shortcuts": [
                {
                    "description": "Transform to uppercase",
