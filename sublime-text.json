                {
                    "description": "Split view into two columns",
                    "keys": ["Alt", "Shift", "2"]
                },
                {
                    "description": "Split view into three columns",
                    "keys": ["Alt", "Shift", "3"]
                },
                {
                    "description": "Split view into four columns",
                    "keys": ["Alt", "Shift", "4"]
                },
                {
                    "description": "Set view to grid (4 groups)",
                    "keys": ["Alt", "Shift", "5"]
                },
                {
                    "description": "Split view into two rows",
                    "keys": ["Alt", "Shift", "8"]
                },
                {
                    "description": "Jump to group where number is 1-4",
